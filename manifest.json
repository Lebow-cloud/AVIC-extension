{
  "manifest_version": 2,
  "name": "AVI",
  "description": "Assistent virtual per millorar l'atenció i l'informació ciutadana complementari al 112",
  "version": "2.3",
  "icons": {
    "32": "images/icon_32.png"
  },
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://web.gencat.cat/*"],
  "background": {
    "scripts": ["js/tab/tab.js"]
  },
  "browser_action": {
    "default_icon": "images/icon_32.png",
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://web.gencat.cat/*"],
      "js": ["js/tab/content.js"],  
      "css": ["styles/tab/styles.css"]
    }
  ]
}
