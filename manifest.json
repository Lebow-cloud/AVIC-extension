{
  "manifest_version": 3,
  "name": "AVI",
  "version": "1.0",
  "description": "Assistencia virtual per la ciutadania",
  "permissions": ["alarms", "scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],

  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "23": "images/icon.png",
      "32": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["images/icon.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://web.gencat.cat/*"],
      "js": ["js/content.js", "js/highlight.js"],
      "css": ["styles/modal.css"]
    }
  ]
}
